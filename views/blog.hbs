<html>

<head>
    <title>Creating Blog Page</title>
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="../public/asset/css/blog.css" />
</head>

<body>
    <!-- NavBar -->
       <nav class="navbar navbar-expand-sm navbar-light bg-light">
          <div class="container">
              <a class="navbar-brand" href="#"><img src="../public/asset/images/logo copy.png" alt="logo"></a>
              
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
              </button>
              
              <div class="collapse navbar-collapse" id="navbarSupportedContent">
          
                  <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                      <li class="nav-item">
                          <a class="nav-link text-color" aria-current="page" href="/">Home</a>
                      </li>
                      <li class="nav-item">
                          <a class="nav-link text-color" style="color: orangered;" aria-current="page" href="/blog">Blog</a>
                      </li>
                  </ul>

                  {{#if isLogin}}

                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <span class="nav-link text-color" aria-current="page">Hallo, {{user.name}}</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-color" aria-current="page" href="/logout">Logout</a>
                        </li>
                    </ul>

                  {{else}}
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                      <li class="nav-item">
                          <a class="nav-link" aria-current="page" href="/register">Register</a>
                      </li>
                      <li class="nav-item">
                          <a class="nav-link" aria-current="page" href="/login">Login</a>
                      </li>
                    </ul>


                  {{/if}}


                  
              
                  <a href="/contact" class="submit" type="submit">Contact Me</a>
            
              </div>
          </div>
      </nav>
    {{#if messages.success}}
        <div class="alert alert-success" role="alert">
            {{messages.success}}
        </div>
      {{/if}}
    <!-- Blog -->
    <!-- Form -->
     {{#if isLogin}}
        <div style="text-align:right; margin-right: 130px; margin-top: 50px">
          <a href="/add-blog" style="background-color: orangered; padding: 7px 20px; border-radius: 5px; color: white; text-decoration:none">Add New Blog</a>
        </div>
      {{/if}}
    <div class="blog">
       
 
      
        <div id="contents" class="blog-list">
            <!-- dynamic content would be here -->
            {{#each blogs}}
            <div class="blog-list-item">
                <div class="blog-image">
                    <img src="/uploads/{{this.image}}" alt="" />
                </div>

                
                <div class="blog-content">
                   
                         {{#if isLogin}}
                    <div class="btn-group">
                        <a href="/edit-blog/{{this.id}}" class="btn-edit">Edit Post</button>
                        <a href="/delete-blog/{{this.id}}"  class="btn-post">Delete Blog</button>
                    </div>
                        {{/if}}
                    

                    <h1>
                        <a href="/blog-detail/{{this.id}}" target="_blank">{{this.title}}</a
              >
            </h1>
            <div class="detail-blog-content">
              {{this.post_date}} | {{this.author}}
            </div>
            <p>
         {{this.content}} 
            </p>
              <div style="text-align: center;">
                <span style="font-size: 12px; color: grey;">
            {{this.distance}}
                </span>
              </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
    <script src="../blog.js"></script>
  </body>
</html>